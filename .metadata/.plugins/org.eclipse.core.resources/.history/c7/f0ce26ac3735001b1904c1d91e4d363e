<%@page import="java.util.ArrayList"%>
<%@ page language="java" contentType="text/html; charset=UTF-8"
    pageEncoding="UTF-8"%>
<%@ taglib uri="http://java.sun.com/jsp/jstl/core" prefix="c" %>
<%
	//JAVA코드
	String name = request.getParameter("myname");
	out.println("<h1>이름 : "+name+"</h1>");
	
	ArrayList<String> alist = new ArrayList<>();
	alist.add("A");
	alist.add("B");
	alist.add("C");
	
	application.setAttribute("score", "application");
	session.setAttribute("score", "session");
	request.setAttribute("score", "request");
	pageContext.setAttribute("score", "pageContext");
%>
<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<title>Insert title here</title>
</head>
<body>
<h1>score : ${score}</h1>
<h1>score : ${applicationScope.score}</h1>
<h1>score : ${sessionScope.score}</h1>
<h1>score : ${requestScope.score}</h1>
<h1>score : ${pageScope.score}</h1>
<hr>
<h1>score : <%=application.getAttribute("score")%></h1>
<h1>score : <%=session.getAttribute("score")%></h1>
<h1>score : <%=request.getAttribute("score")%></h1>
<h1>score : <%=pageContext.getAttribute("score")%></h1>
<hr>
	<h2>이름 : <%=name%></h2>
	<h2>이름 : ${param.myname}</h2>
	<%for(String s : alist){%>
		<p><%=s %></p>
	<%}%>
	<%request.setAttribute("names", alist); %>
	<c:forEach var="al" items="${names}">
		<p>${al}</p>
	</c:forEach>
<%@ include file="footer.jsp" %>
<jsp:include page="footer.jsp"></jsp:include>
